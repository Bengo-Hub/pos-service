# POS Service environment template
POS_APP_NAME=pos-service
POS_APP_ENV=development
POS_APP_REGION=africa-east-1
POS_APP_VERSION=0.1.0

POS_HTTP_HOST=0.0.0.0
POS_HTTP_PORT=4104
POS_HTTP_READ_TIMEOUT=20s
POS_HTTP_WRITE_TIMEOUT=20s
POS_HTTP_IDLE_TIMEOUT=90s

POS_POSTGRES_URL=postgres://postgres:postgres@localhost:5432/pos?sslmode=disable
POS_POSTGRES_MAX_OPEN_CONNS=30
POS_POSTGRES_MAX_IDLE_CONNS=15
POS_POSTGRES_CONN_MAX_LIFETIME=45m

POS_REDIS_ADDR=localhost:6380
POS_REDIS_USERNAME=
POS_REDIS_PASSWORD=
POS_REDIS_DB=0
POS_REDIS_TLS_REQUIRED=false
POS_REDIS_DIAL_TIMEOUT=5s

POS_EVENT_BUS=nats
POS_NATS_URL=nats://localhost:4222
POS_NATS_STREAM=pos
POS_NATS_DELIVER_GROUP=pos-workers
POS_NATS_DLQ_STREAM=pos-dlq

POS_OTLP_ENDPOINT=

# Auth Service SSO (JWT) settings
POS_AUTH_SERVICE_URL=https://auth.codevertex.local:4101
POS_AUTH_ISSUER=https://auth.codevertex.local:4101
POS_AUTH_AUDIENCE=bengobox
POS_AUTH_JWKS_URL=https://auth.codevertex.local:4101/api/v1/.well-known/jwks.json
POS_AUTH_JWKS_CACHE_TTL=3600s
POS_AUTH_JWKS_REFRESH_INTERVAL=300s

